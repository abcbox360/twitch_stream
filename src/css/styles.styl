filter()
    -webkit-filter arguments
    filter arguments

body
    background linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)) ,url(../img/bg.jpg)
    background-attachment fixed
    margin 0
    font-family sans-serif 
.back 
    background rgba(0, 0, 0, 0.5)
    min-height 100vh
    min-width 100vw
    position absolute
    .menu
        color #fff
        height 70px
        width 100%
        position fixed
        background rgb(41, 39, 39)
        top 0
        text-align center
        z-index 1
        h1
            padding 0
            margin 0
            height 40px
        .title_a
            height 30px
            a
                text-decoration none
                margin 0 10px
            a:hover
                color rgb(74, 98, 206)
                cursor pointer
    .row
        display grid
        grid-template-columns repeat(3, 300px)
        gap 30px
        width 100vw
        max-width 1000px
        margin 90px auto 0 auto
        justify-content center
        @media screen and (max-width: 1024px ) {
        grid-template-columns repeat(2, 300px)
        }
        @media screen and (max-width: 700px ) {
        grid-template-columns 300px
        }
        a
            text-decoration none
            .col
                width 300px
                transition filter right bottom 0.3s
                &:hover
                    cursor pointer
                    position relative
                    right 5px
                    bottom 5px
                    filter drop-shadow(5px 5px 20px black)
                    .previwe
                      filter brightness(1.3)
                .previwe
                    width 300px
                    height 180px
                    position relative
                    img
                        width 100%
                        height 100%
                        position absolute
                        opacity 0
                        transition opacity 0.2s
                    div
                        position absolute
                        left 10px
                        bottom 5px
                        z-index 2
                        background rgba(0,0,0,0.5)
                        color #fff
                        font-size 12px
                        padding 5px
                    &:before
                        content: ''
                        width 100%
                        height 100%
                        position absolute
                        z-index -1
                        background url(../img/p1.jpg)
                .colname 
                    background-color rgba(0,0,0,0.5)
                    height 70px
                    display flex
                    .headimg
                        width 50px
                        height 50px
                        overflow  hidden
                        border-radius 50%
                        margin auto 10px
                        position relative
                        img
                            width 100%
                            height 100%
                            position absolute
                            opacity 0
                            transition opacity 0.2s
                        &:before
                            content ''
                            width 100%
                            height 100%
                            position absolute
                            background url(../img/p2.jpg)
                            background-size 100% 
                            z-index -1
                    .namex
                        color white
                        margin auto 0
                        .channel_name 
                            width: 220px
                            white-space nowrap
                            text-overflow ellipsis
                            overflow hidden
                        div
                            margin 5px 5px